{
  "workbench.colorTheme": "Catppuccin Frapp√©",
  "workbench.iconTheme": "catppuccin-frappe",
  "catppuccin.accentColor": "blue",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "window.menuBarVisibility": "toggle",
  "terminal.integrated.copyOnSelection": true,
  "conventionalCommits.emojiFormat": "emoji",
  "conventionalCommits.promptScopes": false,
  "conventionalCommits.promptFooter": false,
  "conventionalCommits.promptBody": false,
  "dev.containers.defaultExtensions": [
    "EditorConfig.EditorConfig",
    "GitHub.copilot-chat",
    "GitHub.copilot-labs",
    "GitHub.copilot",
    "GitHub.vscode-github-actions",
    "GitHub.vscode-pull-request-github",
    "tamasfe.even-better-toml",
    "DavidAnson.vscode-markdownlint",
    "timonwong.shellcheck",
    "VisualStudioExptTeam.vscodeintellicode",
    "vivaxy.vscode-conventional-commits"
  ],
  "foam.openDailyNote.directory": "Log",
  "dev.containers.defaultFeatures": {
    "ghcr.io/stuartleeks/dev-container-features/shell-history:latest": {}
  },
  "editor.fontFamily": "JetBrainsMono NF",
  "editor.formatOnSave": true,
  "files.autoSave": "onWindowChange",
  "markdown.extension.italic.indicator": "_",
  "markdown.extension.completion.enabled": true,
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },
  "workbench.startupEditor": "none",
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "editor.inlineSuggest.enabled": true,
  "markdownlint.config": {
    "default": true,
    "no-bare-urls": false
  },
  "git.autofetch": true,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    },
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "python.analysis.typeCheckingMode": "basic",
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "notebook.source.fixAll": "explicit",
    "notebook.source.organizeImports": "explicit"
  },
  "remote.autoForwardPortsSource": "hybrid",
  "redhat.telemetry.enabled": false,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.sendKeybindingsToShell": true,
  "security.promptForLocalFileProtocolHandling": false,
  "github.copilot.chat.editor.temporalContext.enabled": true,
  "githubPullRequests.experimental.chat": true,
  "github.copilot.nextEditSuggestions.enabled": true,
  "github.copilot.chat.edits.temporalContext.enabled": true,
  "github.copilot.chat.newWorkspaceCreation.enabled": true,
  "github.copilot.chat.search.semanticTextResults": true,
  "github.copilot.chat.scopeSelection": true,
  "github.copilot.chat.agent.thinkingTool": true,
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "text": "Use gitmoji commit message format. Examples:\n‚ö°Ô∏è Lazyload home screen images.\nüêõ Fix `onClick` event handler\nüîñ Bump version `1.2.0`\n‚ôªÔ∏è Transform classes to hooks\nüìà Add analytics to the dashboard\nüåê Support Japanese language\n Deploy new pipeline"
    }
  ]
}
