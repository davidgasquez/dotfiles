#!/bin/bash

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

# Starship
eval "$(starship init bash)"

# History
export HISTSIZE=50000
export HISTFILESIZE=50000
export HISTCONTROL=ignoreboth:erasedups
export HISTIGNORE="ls:ll:cd:pwd:exit:clear"

# Shell options
shopt -s checkwinsize
shopt -s globstar

# Modern navigation
shopt -s autocd cdspell dirspell

# Better completion
shopt -s no_empty_cmd_completion direxpand

# Enhanced history
shopt -s histappend cmdhist lithist

# FZF
eval "$(fzf --bash)"

# Zoxide
eval "$(zoxide init bash)"

# Add scripts to PATH
export PATH="$HOME/projects/dotfiles/scripts:$PATH"

# Aliases
alias cd='z'
alias ls='eza --color=auto --icons=always'
alias ll='eza -l --icons'
alias la='eza -la --icons'
alias tree='eza --tree --icons'
alias cat='bat -pp'
alias up='paru -Syu --devel --skipreview'
alias cmd='llm cmd'
alias claude="/home/david/.claude/local/claude"
alias pull='pull-all-dirs'

# Open
open() {
  xdg-open "$@" >/dev/null 2>&1
}

# Hyprland
if uwsm check may-start; then
	exec uwsm start default
fi
