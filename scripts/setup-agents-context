#!/usr/bin/env bash

# Setup AI agent context files as soft links to AGENTS.md

set -euo pipefail

CURRENT_DIR="$(pwd)"
AGENTS_FILE="$CURRENT_DIR/AGENTS.md"

# Create AGENTS.md if it doesn't exist
if [[ ! -f "$AGENTS_FILE" ]]; then
    touch "$AGENTS_FILE"
fi

# Create or update soft links atomically
for file in "AGENT.md" "CLAUDE.md"; do
    ln -sfn "AGENTS.md" "$CURRENT_DIR/$file"
done
