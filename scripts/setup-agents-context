#!/usr/bin/env bash

# Setup AI agent context files as soft links to AGENTS.md

set -e

CURRENT_DIR="$(pwd)"
AGENTS_FILE="$CURRENT_DIR/AGENTS.md"

# Create AGENTS.md if it doesn't exist
if [[ ! -f "$AGENTS_FILE" ]]; then
    touch "$AGENTS_FILE"
fi

# Create soft links
for file in "AGENT.md" "CLAUDE.md"; do
    target_path="$CURRENT_DIR/$file"

    # Remove existing file/link if it exists
    if [[ -e "$target_path" || -L "$target_path" ]]; then
        rm "$target_path"
    fi

    # Create soft link
    ln -s "AGENTS.md" "$target_path"
done
