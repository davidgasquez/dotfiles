#!/usr/bin/env bash

# Setup AI agent context. Single source of truth is AGENTS.md.

set -euo pipefail

CURRENT_DIR="$(pwd)"
AGENTS_FILE="$CURRENT_DIR/AGENTS.md"

# Create AGENTS.md if it doesn't exist
if [[ ! -f "$AGENTS_FILE" ]]; then
    touch "$AGENTS_FILE"
fi

ln -sfn "AGENTS.md" "$CURRENT_DIR/CLAUDE.md"
